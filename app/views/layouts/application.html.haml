%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang=>"en"}
  %head
    = stylesheet_link_tag 'screen', :media => 'screen, projection'
    = stylesheet_link_tag 'print', :media => 'print'
    = stylesheet_link_tag 'media_query'
    /[if IE]
      = stylesheet_link_tag 'ie', :media => 'screen, projection'
    = stylesheet_link_tag 'typography'
    = stylesheet_link_tag 'highlight'
    
    %title On The Rails Again
    = csrf_meta_tag

  %body
    = render :partial => "shared/header"
    .search
      .content
        = form_for @search do |f|
          = f.label       :title_or_content_contains
          = f.text_field  :title_or_content_contains
          %a#advance_search_button{:href => "#"} Recherche avancÃ©e
          #advance_search
            = f.label       :title_contains
            = f.text_field  :title_contains
            %br/
            = f.label       :content_contains
            = f.text_field  :content_contains
            %br/   
            = f.label       :tags_name_contains
            = f.text_field  :tags_name_contains
          %br/   
          = f.submit  
    .container
      %section
        .content                       
          - flash.each do |name, msg|
            = content_tag :p, msg, :id => "flash_#{name}"
          = yield 
    = render :partial => "shared/footer"
  
    / Include des Javascripts
    - #javascript_include_tag :all
    = javascript_include_tag :defaults
    = yield :javascript