= flash[:notice]
= flash[:error]

.article_content
  ~ @article.content.html_safe
  %p
    %b= @article.authors.length > 1 ? "Auteurs:" : "Auteur:"
    %ul
    - @article.authors.each do |author|
      %li=author.name
  %p
    %b Tags:
    %ul.tags
      - @article.tags.each do |tag|
        %li= link_to tag.name, articles_path(:tag => tag.name)

  %a{ :href => "http://twitter.com/share?count=none", :class => "twitter-share-button"} 
  %g:plusone{:size => "medium", :count => "false"}

  %fb:like{ :send => "false", :layout => "standard", :show_faces => "false", :action => "like"}
  #disqus_thread
    = raw disqus_thread
  
  -# %h3#comments_header= pluralize(@article.comments.length, "Commentaire")
  -# #comments
  -#  = nested_comments(@article.comments.arrange(:order => :created_at))
  
  -# render "comments/form"

%aside#summary
  #summary_content
    ~ @article.summary.html_safe

= content_for :javascript do
  = coffeescript_include_tag "article_show"