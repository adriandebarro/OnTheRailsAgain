%aside.date
 
%section.articles  
  - if @articles.empty?
    %h3
      Aucun article correspond à votre recherche...
  - @articles.each do |article|
    = render article
  = will_paginate @articles, :previous_label => "Précédent", :next_label => "Suivant"

%aside.tags
  .content
  
    = render "shared/search"
    
    #tags.aside_box
      %h3 Tags
      %ul
        - @tags.each do |tag|
          %li= link_to "#{tag.name} (#{tag.articles.length})", articles_path(:tag => tag.name)
    #contact.aside_box
      %h3 Nous contacter
      %p
        N'hésitez pas à nous         
        %a{:href => "mailto:admin@ontherailsagain.com"} envoyer un mail 
        pour nous demander un article ou ne serais-ce que pour prendre contact avec nous !
